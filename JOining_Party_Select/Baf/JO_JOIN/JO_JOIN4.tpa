// Aerie

	ACTION_IF JOining_Aerie = 1 THEN BEGIN

<<<<<<<< .../JOining_Aerie.baf

IF
	Global("JO_JOIN","LOCALS",2)
	Switch("JO_JOIN_CAMPAIGN","GLOBAL")
THEN
	RESPONSE #3 // BG2EE
		SetDialog("AERIEJ")
		SmallWait(1)
		SetGlobal("JO_JOIN","LOCALS",0)
//		ChangeAIScript("AERIE",OVERRIDE)
		Continue()
	RESPONSE #4  // ToB 
		SetDialog("%AERIE25J%")
		SmallWait(1)
		SetGlobal("JO_JOIN","LOCALS",0)
//		ChangeAIScript("AERI25",OVERRIDE)
		Continue()
END

>>>>>>>>
EXTEND_BOTTOM ~%bcs%.bcs~ ~.../JOining_Aerie.baf~ EVALUATE_BUFFER

	END // JOining_Aerie = 1

